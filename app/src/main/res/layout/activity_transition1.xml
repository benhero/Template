<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".function.view.transition.TransitionActivity1">

    <ImageView
        android:id="@+id/transition_img_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/pikachu"
        android:transitionName="img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/transition_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pikachu"
        android:transitionName="text"
        app:layout_constraintBottom_toBottomOf="@+id/transition_img_1"
        app:layout_constraintStart_toEndOf="@id/transition_img_1"
        app:layout_constraintTop_toTopOf="@+id/transition_img_1" />

</androidx.constraintlayout.widget.ConstraintLayout>