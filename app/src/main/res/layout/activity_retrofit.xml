<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".function.retrofit.RetrofitActivity">

        <EditText
            android:id="@+id/src_text"
            cornerRadius="@{14}"
            solidColor="@{0xffecebf3}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:gravity="center"
            android:minHeight="120dp"
            android:text="你好"
            android:textColor="#000"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@id/dst_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dst_text"
            cornerRadius="@{14}"
            solidColor="@{0xffecebf3}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:gravity="center"
            android:minHeight="120dp"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/src_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/src_text"
            app:layout_constraintTop_toTopOf="@id/src_text"
            app:layout_constraintVertical_chainStyle="spread" />

        <Button
            android:id="@+id/translate_btn"
            cornerRadius="@{40}"
            solidColor="@{@color/colorPrimary}"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="翻译"
            android:textColor="#FFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/src_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>